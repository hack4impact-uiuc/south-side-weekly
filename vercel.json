{
  "regions": ["iad1"],
  "env": {
    "PROD_MONGO_URL": "@ssw_db_url",
    "GOOGLE_CLIENT_ID": "@ssw_google_client_id",
    "GOOGLE_CLIENT_SECRET": "@ssw_google_client_secret",
    "GOOGLE_CALLBACK_URL": "@ssw_google_callback_url",
    "SESS_SECRET": "@ssw_session_secret"
  },
  "builds": [
    { "src": "api/src/app.ts", "use": "@vercel/node" },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "headers": {
        "cache-control": "s-maxage=0"
      },
      "dest": "api/src/app.ts"
    },
    {
      "src": "/static/(.*)",
      "headers": { "cache-control": "s-maxage=31536000, immutable" },
      "dest": "client/static/$1"
    },
    { "src": "/ssw-favicon.ico", "dest": "client/ssw-favicon.ico" },
    {
      "src": "/asset-manifest.json",
      "dest": "client/asset-manifest.json"
    },
    {
      "src": "/precache-manifest.(.*)",
      "dest": "client/precache-manifest.$1"
    },
    { "src": "/manifest.json", "dest": "client/manifest.json" },
    {
      "src": "/service-worker.js",
      "headers": { "cache-control": "s-maxage=0" },
      "dest": "client/service-worker.js"
    },
    { "src": "/(.*)", "dest": "client/index.html" }
  ]
}
