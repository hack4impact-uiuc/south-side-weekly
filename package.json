{
  "devDependencies": {
    "eslint": "^7.20.0",
    "husky": "=4",
    "lint-staged": ">=10",
    "prettier": "^2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{js,css,scss,json,md,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "./api/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix -c api/.eslintrc.json"
    ],
    "./client/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix -c client/.eslintrc.json"
    ]
  }
}
