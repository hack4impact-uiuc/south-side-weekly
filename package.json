{
  "devDependencies": {
    "eslint": "^7.20.0",
    "lint-staged": ">=10",
    "prettier": "^2.2.1"
  },
  "lint-staged": {
    "./**/*.{js,css,scss,json,md,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "./api/**/*.{js,jsx,ts,tsx}": [
      "cd api && yarn lint"
    ],
    "./client/**/*.{js,jsx,ts,tsx}": [
      "cd client && yarn lint"
    ]
  },
  "dependencies": {
    "@types/react-color": "^3.0.6"
  }
}
